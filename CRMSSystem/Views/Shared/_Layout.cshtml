<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My CRMSSystem</title>
    @*<link href="~/style/login.css" rel="stylesheet" />*@
    <link href="~/style/style.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/css/toastr.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/js/toastr.js"></script>

    @Scripts.Render("~/bundles/jquery")

    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>



    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Kendo")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/bootstrap.js"></script>

</head>
<body>
    <div class="mainDiv">
        <!-- Header -->
        <div class="header">
            <div class="container">
                <div class="align-center align-between">
                    <div class="align-center">
                        <div class="logoDiv"> <a href="#"> <img src="~/image/logo.svg" alt="CRB Logo"> </a> </div>

                        <div class="menuDiv">
                            <ul class="align-center">
                                <li>@Html.ActionLink("Home", "Index", "Home")<a href="#"></a> </li>
                                <li>@Html.ActionLink("ConferenceRoom", "Index", "Admin")<a href="#"> </a> </li>
                                <li>@Html.ActionLink("Systems", "Index", "Admin") <a href="#"></a> </li>
                                <li>@Html.ActionLink("Forms", "Index", "Forms") <a href="#"></a> </li>
                            </ul>
                        </div>
                    </div>

                    <div class="userInfo">
                        <div class="align-center">
                            <div class="userProfile">

                            </div>
                            <div class="userName align-center">
                                @if (Session["UserName"] != null)
                                {
                                    <span>@Session["UserName"]</span>
                                    <i> <img src="~/image/down-arrow.svg" alt="Dropdown Icon"> </i>
                                    <div class="userInfoDiv">
                                        <div class="userInfoBox">
                                            <a href="#">Profile</a>
                                            <a href="#">Settings</a>

                                            @Html.ActionLink("Logout", "Logout", "Account")
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
        </div> 
    </div>
</body>
</html>

<link rel="stylesheet" href="https://kendo.cdn.telerik.com/2022.2.510/styles/kendo.common.min.css" />
<link rel="stylesheet" href="https://kendo.cdn.telerik.com/themes/6.2.0/default/default-main.css" />
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/bootstrap")

