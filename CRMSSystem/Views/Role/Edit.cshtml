@model CRMSSystem.Core.View.RoleViewModel

@using (Html.BeginForm("Edit", "Role", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    
            <!----- Form ---->
            <div class="formDiv">
                <div class="topTitleHead pb20">
                    <h1> Edit Role</h1>
                </div>
                <div class="formSection">
                    <div class="inputBox">
                        @Html.ValidationSummary(true, "", new { @class = "errorMsg" })
                        <div class="text text-danger">@ViewBag.Message</div>

                        <label class="form-label">Name<strong style="color: red; font-size: 20px">*</strong></label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "errorMsg" })

                        @*<p class="errorMsg">This field is required</p>*@
                    </div>
                    <div class="inputBox">
                        <label class="form-label">Code<strong style="color: red; font-size: 20px">*</strong></label>
                        @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control", @style = "text-transform: uppercase" } })
                        @Html.ValidationMessageFor(model => model.Code, "", new { @class = "errorMsg" })

                    </div>
                </div>
                <div class="inputBox">
                    <button class="btnDiv">Edit</button>
                </div>
            </div>

     
        <!----- END Form ---->
    
}

<button id="backToList">Previous</button>

<script>
    $(document).ready(function() {
    $('#backToList').click(function() {
      history.back();
    });
  });
</script>
