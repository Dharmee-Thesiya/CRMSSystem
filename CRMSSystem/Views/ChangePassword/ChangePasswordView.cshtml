@model CRMSSystem.Core.View.ChangePasswordViewModel

@using (Html.BeginForm("ChangePasswordView", "ChangePassword", FormMethod.Post))
{
    @Html.AntiForgeryToken()
        <div class="topTitleHead pb20">
            <h2 style="padding-top:70px">Change Password</h2>
        </div>
        <div class="inputBox">
            @Html.ValidationSummary(true, "", new { @class = "errorMsg" })
            <div class="text text-danger">@ViewBag.Message</div>

            <label class="form-label">Current Password<strong style="color:red;font-size:20px">*</strong></label>
            @Html.EditorFor(model => model.CurrentPassword, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Name" } })
            @Html.ValidationMessageFor(model => model.CurrentPassword, "", new { @class = "errorMsg" })
        </div>
        <div class="inputBox">
            <label class="form-label">New Password<strong style="color: red; font-size: 20px">*</strong></label>
            @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Email" } })
            @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "errorMsg" })
        </div>
        <div class="inputBox">
            <label class="form-label">Confirm Password<strong style="color: red; font-size: 20px">*</strong></label>
            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Password" } })
            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "errorMsg" })
        </div>

        <div class="inputBox" style="padding-top:50px">
            <button class="btnDiv" id="Savebtn">Save</button>
        </div>
}

<style>
    .inputBox input, .inputBox select {
        font-weight: 400;
        font-size: 16px;
        line-height: 2.2;
        border: 1px solid;
        border-color: #DDDDDD;
        border-radius: 5px;
        width: 50%;
        display: block;
        height: 46px;
        padding: 0 15px;
    }
</style>
